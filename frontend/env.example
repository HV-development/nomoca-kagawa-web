# ==========================================
# API設定
# ==========================================

# バックエンドAPIのベースURL（サーバーサイド用）
# バージョン管理（/api/v1）はプログラム側で行います
# ローカル開発（Docker）: http://api:3002
# 本番環境: https://your-railway-api-domain.railway.app
API_BASE_URL=http://api:3002

# バックエンドAPIのベースURL（クライアントサイド用）
# NEXT_PUBLIC_ プレフィックスが必要
NEXT_PUBLIC_API_URL=http://localhost:3002

# ==========================================
# アプリケーション識別設定
# ==========================================

# アプリケーション判定用ドメイン（X-App-Domainヘッダーで送信）
# 設定しない場合はリクエストのhostヘッダーから自動取得
# 本番: stg.nomoca-kagawa.com または nomoca-kagawa.com
# APP_DOMAIN=localhost:3003
# NEXT_PUBLIC_APP_DOMAIN=localhost:3003

# ==========================================
# 開発用設定
# ==========================================

# 認証バイパス（開発環境のみ）
# true: 認証をスキップして開発を効率化
# false: 通常の認証フロー
NEXT_PUBLIC_BYPASS_AUTH=false
BYPASS_AUTH=false

# ==========================================
# マイページ機能の表示制御
# ==========================================
# デフォルトはすべてtrue（表示）
# false にすると該当機能を非表示にできます

# プロフィール表示
NEXT_PUBLIC_MYPAGE_SHOW_PROFILE=true

# メールアドレス変更
NEXT_PUBLIC_MYPAGE_SHOW_EMAIL_CHANGE=true

# パスワード変更
NEXT_PUBLIC_MYPAGE_SHOW_PASSWORD_CHANGE=true

# 利用履歴
# ★一時的な対応：正式リリースまでfalse（非表示）
# 正式リリース時にtrueに変更
NEXT_PUBLIC_MYPAGE_SHOW_USAGE_HISTORY=true

# 支払い履歴  
# ★一時的な対応：正式リリースまでfalse（非表示）
# 正式リリース時にtrueに変更
NEXT_PUBLIC_MYPAGE_SHOW_PAYMENT_HISTORY=true

# プラン管理
NEXT_PUBLIC_MYPAGE_SHOW_PLAN_MANAGEMENT=true

# 退会
NEXT_PUBLIC_MYPAGE_SHOW_WITHDRAWAL=true

# ==========================================
# アクセス制限
# ==========================================

# トップページへのアクセス制限
# true: 認証済みユーザーのみアクセス可能
# false: 誰でもアクセス可能
NEXT_PUBLIC_RESTRICT_TOP_PAGE_ACCESS=false

# ==========================================
# セッション暗号化
# ==========================================

# セッションデータ暗号化用シークレットキー（32文字以上推奨）
# 本番環境では必ず強力なランダム文字列を設定してください
# 生成例: openssl rand -base64 32
SESSION_SECRET=your-secure-session-secret-key-here-min-32-chars

# ==========================================
# Next.js設定
# ==========================================

# Node.js環境
NODE_ENV=development

# Next.jsテレメトリー無効化
NEXT_TELEMETRY_DISABLED=1

# ファイル監視（Docker環境で必要）
WATCHPACK_POLLING=true

# キャッシュ無効化（開発時）
NEXT_CACHE_DISABLED=1
